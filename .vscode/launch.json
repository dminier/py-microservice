    "version": "0.2.0",
    "configurations": [
        {
            "name": "py-microservice",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "PYTHONDONTWRITEBYTECODE": "1",
            },
            "args": [
                "virtual_staff.launch:app",
                "--reload",
                "--workers",
                "1",
                "--port",
                "8080"
            ]
        }
    
    ]
}