{
  // Python settings
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
  },

  // JSON settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // YAML settings
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // General settings for organizing imports and fixing issues
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.fixAll": "always"
  },

 
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  // Prettier settings
  "prettier.tabWidth": 2, // Consistent tab width for formatting
  "prettier.singleQuote": true, // Use single quotes for strings
  "prettier.trailingComma": "all", // Enforce trailing commas
  "prettier.arrowParens": "always", // Enforce parentheses for arrow functions
  "prettier.printWidth": 120, // Enforce maximum line length
  "prettier.endOfLine": "lf",
  "python.testing.pytestArgs": [
    "tests"
  ], // Normalize line endings
}
